{
    "name": "alexskrypnyk/csvtable",
    "type": "library",
    "description": "PHP class to work with CSV as a table and export it as Markdown.",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alex Skrypnyk",
            "email": "alex@drevops.com",
            "role": "Maintainer"
        }
    ],
    "homepage": "https://github.com/AlexSkrypnyk/CsvTable",
    "support": {
        "issues": "https://github.com/AlexSkrypnyk/CsvTable/issues",
        "source": "https://github.com/AlexSkrypnyk/CsvTable"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -s --standard=Drupal CsvTable.php tests",
        "lint:fix": "vendor/bin/phpcbf -s --standard=Drupal CsvTable.php tests",
        "test": "phpunit --display-deprecations --display-notices --display-warnings tests"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "drupal/coder": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "AlexSkrypnyk\\CsvTable\\": ""
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
